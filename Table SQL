CREATE TABLE IF NOT EXISTS `blanchiment_points` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `owner` VARCHAR(64) NOT NULL,
  `name` VARCHAR(64) NOT NULL,
  `x` DOUBLE NOT NULL,
  `y` DOUBLE NOT NULL,
  `z` DOUBLE NOT NULL,
  `ped` VARCHAR(64) DEFAULT NULL,
  `inventory` TEXT,
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS `blanchiment_ped` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `name` VARCHAR(64) NOT NULL,
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS `blanchiment_ped_point` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `x` DOUBLE NOT NULL,
  `y` DOUBLE NOT NULL,
  `z` DOUBLE NOT NULL,
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS `blanchisseur` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `owner` VARCHAR(64) NOT NULL,
  `name` VARCHAR(64) NOT NULL,
  `phone` VARCHAR(64) NOT NULL,
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE IF NOT EXISTS `blanchiment_chef` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `name` VARCHAR(64) NOT NULL,
  `ped` VARCHAR(64) DEFAULT NULL,
  `x` DOUBLE NOT NULL,
  `y` DOUBLE NOT NULL,
  `z` DOUBLE NOT NULL,
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
